{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "defaultValue": "HybridHost001",
            "metadata": {
                "description": "Provide a name for your Azure VM. This VM name should be less than 15 characters"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_E16s_v4",
            "allowedValues": [
                // Dsv4 sizes series - Supports Premium Storage, no temp storage
                "Standard_D8s_v4",
                "Standard_D16s_v4",
                "Standard_D32s_v4",
                "Standard_D48s_v4",
                "Standard_D64s_v4",
                // Ddv4 sizes series - No Premium Storage, supports temp storage
                "Standard_D8d_v4",
                "Standard_D16d_v4",
                "Standard_D32d_v4",
                "Standard_D48d_v4",
                "Standard_D64d_v4",
                // Ddsv4 sizes series - Supports Premium Storage and temp storage
                "Standard_D8ds_v4",
                "Standard_D16ds_v4",
                "Standard_D32ds_v4",
                "Standard_D48ds_v4",
                "Standard_D64ds_v4",
                // Dv5 sizes series - No Premium Storage, no temp storage
                "Standard_D8_v5",
                "Standard_D16_v5",
                "Standard_D32_v5",
                "Standard_D48_v5",
                "Standard_D64_v5",
                // Dsv5 sizes series - Supports Premium Storage, no temp storage
                "Standard_D8s_v5",
                "Standard_D16s_v5",
                "Standard_D32s_v5",
                "Standard_D48s_v5",
                "Standard_D64s_v5",
                // Ddv5 sizes series - No Premium Storage, supports temp storage
                "Standard_D8d_v5",
                "Standard_D16d_v5",
                "Standard_D32d_v5",
                "Standard_D48d_v5",
                "Standard_D64d_v5",
                // Ddsv5 sizes series - Supports Premium Storage and temp storage
                "Standard_D8ds_v5",
                "Standard_D16ds_v5",
                "Standard_D32ds_v5",
                "Standard_D48ds_v5",
                "Standard_D64ds_v5",
                // Dsv6 sizes series - Supports Premium Storage, no temp storage
                "Standard_D8s_v6",
                "Standard_D16s_v6",
                "Standard_D32s_v6",
                "Standard_D48s_v6",
                "Standard_D64s_v6",
                // Ddsv6 sizes series - Supports Premium Storage and temp storage
                "Standard_D8ds_v6",
                "Standard_D16ds_v6",
                "Standard_D32ds_v6",
                "Standard_D48ds_v6",
                "Standard_D64ds_v6",
                // Esv4 sizes series - Supports Premium Storage, no temp storage
                "Standard_E8s_v4",
                "Standard_E16s_v4",
                "Standard_E16-8s_v4",
                "Standard_E20s_v4",
                "Standard_E32s_v4",
                "Standard_E32-8s_v4",
                "Standard_E32-16s_v4",
                "Standard_E48s_v4",
                "Standard_E64s_v4",
                "Standard_E64-16s_v4",
                "Standard_E64-32s_v4",
                // Edv4 sizes series - No Premium Storage, supports temp storage
                "Standard_E8d_v4",
                "Standard_E16d_v4",
                "Standard_E20d_v4",
                "Standard_E32d_v4",
                "Standard_E48d_v4",
                "Standard_E64d_v4",
                // Edsv4 sizes series - Supports Premium Storage and temp storage
                "Standard_E8ds_v4",
                "Standard_E16ds_v4",
                "Standard_E20ds_v4",
                "Standard_E32ds_v4",
                "Standard_E48ds_v4",
                "Standard_E64ds_v4",
                "Standard_E64-16ds_v4",
                "Standard_E64-32ds_v4",
                // Ev5 sizes series - No Premium Storage, no temp storage
                "Standard_E8_v5",
                "Standard_E16_v5",
                "Standard_E20_v5",
                "Standard_E32_v5",
                "Standard_E48_v5",
                "Standard_E64_v5",
                // Esv5 sizes series - Supports Premium Storage, no temp storage
                "Standard_E8s_v5",
                "Standard_E16s_v5",
                "Standard_E20s_v5",
                "Standard_E32s_v5",
                "Standard_E48s_v5",
                "Standard_E64s_v5",
                // Edv5 sizes series - No Premium Storage, supports temp storage
                "Standard_E8d_v5",
                "Standard_E16d_v5",
                "Standard_E20d_v5",
                "Standard_E32d_v5",
                "Standard_E48d_v5",
                "Standard_E64d_v5",
                // Edsv5 sizes series - Supports Premium Storage and temp storage
                "Standard_E8ds_v5",
                "Standard_E16ds_v5",
                "Standard_E20ds_v5",
                "Standard_E32ds_v5",
                "Standard_E48ds_v5",
                "Standard_E64ds_v5",
                // Esv6 sizes series - Supports Premium Storage, no temp storage
                "Standard_E8s_v6",
                "Standard_E16s_v6",
                "Standard_E20s_v6",
                "Standard_E32s_v6",
                "Standard_E48s_v6",
                "Standard_E64s_v6",
                // Edsv6 sizes series - Supports Premium Storage and temp storage
                "Standard_E8ds_v6",
                "Standard_E16ds_v6",
                "Standard_E20ds_v6",
                "Standard_E32ds_v6",
                "Standard_E48ds_v6",
                "Standard_E64ds_v6"
            ]
        },
        "virtualMachineGeneration": {
            "type": "string",
            "defaultValue": "Generation 2",
            "allowedValues": [
                "Generation 1",
                "Generation 2"
            ],
            "metadata": {
                "description": "Select your VM generation, ideally Gen 2. Not all Azure regions support Gen 2 VMs."
            }
        },
        "azureLocalArchitecture": {
            "type": "string",
            "defaultValue": "2-Machine Non-Converged",
            "allowedValues": [
                "Single Machine",
                "2-Machine Non-Converged",
                "2-Machine Fully-Converged",
                "2-Machine Switchless Dual-Link",
                "3-Machine Non-Converged",
                "3-Machine Fully-Converged",
                "3-Machine Switchless Single-Link",
                "3-Machine Switchless Dual-Link",
                "4-Machine Non-Converged",
                "4-Machine Fully-Converged",
                "4-Machine Switchless Dual-Link"
            ],
            "metadata": {
                "description": "Select your preferred Azure Local architecture. The number of nested Azure Local machines and their network configuration will be determined by this selection."
            }
        },
        "azureLocalMachineMemory": {
            "type": "int",
            "defaultValue": 16,
            "allowedValues": [
                16,
                24,
                32,
                48
            ],
            "metadata": {
                "description": "Select the memory per Azure Local machine. If you choose more memory than will fit on your host system, the per-machine memory will be reduced automatically."
            }
        },
        "telemetryLevel": {
            "type": "string",
            "defaultValue": "Full",
            "allowedValues": [
                "None",
                "Basic",
                "Full"
            ],
            "metadata": {
                "description": "Choose to opt-in to telemetry collection to better understand impact of the Hybrid Jumpstart/MSLab scripts i.e. number of VMs deployed, where MSLab is being used etc. Data sent from scripts are hosted in Azure Application Insights service and it is absolutely transparent what information is being collected, since all code is visible in PowerShell Scripts on Github repository. More info here: https://github.com/microsoft/MSLab/blob/master/Docs/mslab-telemetry.md"
            }
        },
        "dataDiskType": {
            "type": "string",
            "defaultValue": "StandardSSD_LRS",
            "allowedValues": [
                "StandardSSD_LRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "The Storage type of the VM data disk. If your VM contains an 's' in the VM size, you can select Premium_LRS storage for increased performance, but at a higher cost."
            }
        },
        "dataDiskSize": {
            "type": "string",
            "defaultValue": "64",
            "allowedValues": [
                "32",
                "64",
                "128",
                "256",
                "512",
                "1024"
            ],
            "metadata": {
                "description": "The size of the individual data disks in GiB. 8 of these will be provisioned and 64GiB is the recommended default."
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "LocalAdmin",
            "metadata": {
                "description": "The administrator username for the VM and for login to the nested lab machines"
            }
        },
        "domainName": {
            "type": "string",
            "defaultValue": "azl.lab",
            "minLength": 3,
            "maxLength": 64,
            "metadata": {
                "description": "The preferred domain name for the environment. This must be a valid domain name with a maximum of one subdomain, and will be used to create the Active Directory domain."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 12,
            "metadata": {
                "description": "The administrator password for the VM and for login to the nested lab machines. This should be at least 12 characters long and contains a lowercase character, an uppercase character, a numeral, and a special character."
            }
        },
        "customRdpPort": {
            "type": "string",
            "defaultValue": "3389",
            "metadata": {
                "description": "If you wish to use a different port to RDP into the VM (between 0 and 65535), change it here, otherwise, leave the default."
            }
        },
        "autoShutdownStatus": {
            "type": "string",
            "defaultValue": "Enabled",
            "allowedValues": [
                "Enabled",
                "Disabled"
            ]
        },
        "autoShutdownTime": {
            "type": "string",
            "defaultValue": "22:00"
        },
        "autoShutdownTimeZone": {
            "type": "string",
            "defaultValue": "UTC",
            "allowedValues": [
                "Afghanistan Standard Time",
                "Alaskan Standard Time",
                "Aleutian Standard Time",
